@model IEnumerable<string>

@foreach (var link in Model)
{
    @Html.RouteLink(link, new
{
    controller = "Product",
    action = "List",
    category = link,
    page = 1
},
    new
    {
        @class = "btn btn-block bg-light"
                    + (link == ViewBag.SelectedCategory ? " btn btn-warning btn-lg btn-block" : "")

    })
}