@model Domain.Entities.Cart


<div class="navbar-right" style="padding-left:20px">
    @Html.ActionLink("Заказать", "Index", "Cart",
    new { returnUrl = Request.Url.PathAndQuery },
    new { @class = "btn btn-light navbar-btn" })
</div>
<div class="navbar-text" style="padding-left:10px">
    <b>Товаров в корзине:</b>
    @Model.Lines.Sum(x => x.Quantity) шт,
    @Model.ComputeTotalValue().ToString("# руб")
</div>
